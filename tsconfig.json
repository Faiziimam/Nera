{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "verbatimModuleSyntax": false,
      "noEmit": false
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  